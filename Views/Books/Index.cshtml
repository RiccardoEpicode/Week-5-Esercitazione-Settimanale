@model IEnumerable<Library.Models.Entity.Book>

@{
    ViewData["Title"] = "Books";
}


<div class="d-flex flex-column">

    <div class="flex-grow-1 text-center">
        <h1 class="display-4">Books</h1>
        <p>List of Books will be displayed here.</p>
    </div>

    <div class="flex-grow-1 text-center">
        
        @foreach(var p in Model)
        {
          <div>
          <div>
              <img src="/images/@p.CoverImg" />
          </div>
          <div>
              <h4>@p.Title</h4>
              <p>@p.Description</p>
          </div>
          <hr />
          <div>
              <p>@p.Author.FullName</p>
          </div>
            </div>
        }
    </div>

    <!-- FOOTER -->
    <footer class="border-top footer text-muted mt-auto py-2 bg-white text-center fixed-bottom">
        <div class="container">
            &copy; 2025 - Library -
            <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
</div>
