<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Library</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Home.css" asp-append-version="true" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
</head>

<body>

    <div class="layout-wrapper">

        <div class="sidebar">

            <div class="nav-item mb-4 w-100 text-center">
                <a asp-controller="Home" asp-action="Index" class="nav-link py-3 rounded-0">
                    <i class="bi bi-book-half fs-1"></i>
                </a>
            </div>

            <ul class="nav nav-pills nav-flush flex-column text-center">

                <li class="nav-item my-2">
                    <a asp-controller="Home" asp-action="Index"
                       class="nav-link py-3 rounded-0 @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")">
                        <i class="bi bi-house"></i>
                        <span class="d-block small">Home</span>
                    </a>
                </li>

                <li class="nav-item my-2">
                    <a asp-controller="Authors" asp-action="Index"
                       class="nav-link py-3 rounded-0 @(ViewContext.RouteData.Values["controller"]?.ToString() == "Authors" ? "active" : "")">
                        <i class="bi bi-person-lines-fill"></i>
                        <span class="d-block small">Authors</span>
                    </a>
                </li>

                <li class="nav-item my-2">
                    <a asp-controller="Collections" asp-action="Index"
                       class="nav-link py-3 rounded-0 @(ViewContext.RouteData.Values["controller"]?.ToString() == "Collections" ? "active" : "")">
                        <i class="bi bi-collection"></i>
                        <span class="d-block small">Collections</span>
                    </a>
                </li>

                <li class="nav-item my-2">
                    <a asp-controller="Books" asp-action="Index"
                       class="nav-link py-3 rounded-0 @(ViewContext.RouteData.Values["controller"]?.ToString() == "Books" ? "active" : "")">
                        <i class="bi bi-book"></i>
                        <span class="d-block small">Books</span>
                    </a>
                </li>

                <li class="nav-item my-2">
                    <a asp-controller="Genres" asp-action="Index"
                       class="nav-link py-3 rounded-0 @(ViewContext.RouteData.Values["controller"]?.ToString() == "Genres" ? "active" : "")">
                        <i class="bi bi-tags"></i>
                        <span class="d-block small">Genres</span>
                    </a>
                </li>

            </ul>

            <div class="dropdown border-top mt-auto pt-3">
                <a href="#" class="d-flex justify-content-center p-2 dropdown-toggle" data-bs-toggle="dropdown">
                    <img src="https://github.com/mdo.png" width="30" height="30" class="rounded-circle" />
                </a>

                <ul class="dropdown-menu text-small shadow">
                    <li><a class="dropdown-item" href="#">Profile</a></li>
                    <li><a class="dropdown-item" href="#">Settings</a></li>
                    <li><hr class="dropdown-divider" /></li>
                    <li><a class="dropdown-item" href="#">Sign out</a></li>
                </ul>
            </div>

        </div>

        <div class="content">
            <main class="pb-3">
                @RenderBody()
            </main>
        </div>

    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
